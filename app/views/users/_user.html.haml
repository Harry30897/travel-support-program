- if user_signed_in? && can?(:read, user.profile)
  = collapse_link "user_details", user.nickname
  %blockquote#user_details.collapse
    .row-fluid
      .span6
        = show_for user.profile do |p|
          = p.attribute :full_name
          = p.attribute :birthday
          = p.attribute :country do
            = country_label(user.profile.country_code)
          = p.attribute :location
          = p.attribute :postal_address
          = p.attribute :zip_code
          = p.attribute :description
      .span6
        = show_for user do |u|
          = u.attribute :email
        = show_for user.profile do |p|
          = p.attribute :phone_number
          = p.attribute :second_phone_number
          = p.attribute :website
          = p.attribute :blog
          = p.attribute :passport
          = p.attribute :alternate_id_document
- else
  = user.nickname
