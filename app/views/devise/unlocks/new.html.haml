= content_for :page_header do
  %h1= t(:resend_unlock_instructions)

= simple_form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post, :class => 'form-horizontal' }, wrapper: :horizontal_form) do |f|
  = f.error_notification
  = f.input :email, :required => true
  .actions
    = f.button :submit, t(:resend_unlock_instructions)

= render :partial => "devise/shared/links"
