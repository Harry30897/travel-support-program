.col-md-12
  %h3 Participants of #{@event.name}
  %br
  %table.table
    %tr
      %th #
      %th Nickname
      %th Email
      %th State
    - @requests.each.with_index(1) do |request,index|
      %tr
        %td #{index}
        %td
          = request.user.nickname
        %td
          = request.user.email
        %td
          = content_tag(:span, request.state, class: "label #{state_label(request.state)}")
